<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding16"
    android:paddingEnd="@dimen/padding16"
    tools:context=".presentation.filter.SearchFilterFragment">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dash"
            android:scaleType="centerCrop"
            android:layout_gravity="center|top"/>

        <ProgressBar
            android:id="@+id/p_bar"
            style="?android:attr/progressBarStyle"
            android:layout_gravity="center|top"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chg_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:chipSpacingHorizontal="4dp"
            app:chipSpacingVertical="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_do_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding16"
            android:text="@string/search"
            android:textAllCaps="false"
            android:fontFamily="@font/mts_sans_medium"
            android:background="@drawable/style_btn"
            android:textColor="@color/btn_text"/>

</LinearLayout>